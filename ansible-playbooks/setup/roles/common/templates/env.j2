# General settings
DJANGO_DEBUG=False
DJANGO_READ_DOT_ENV_FILE=False
DATABASE_URL={{ db_url }}
DJANGO_ADMIN_URL={{ admin_url }}
DJANGO_SETTINGS_MODULE={{ django_settings }}
DJANGO_SECRET_KEY={{ secret_key }}
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.{{ inventory_hostname }},.{{ ansible_hostname }}

# Used with email
MAILGUN_API_KEY={{ mailgun_api_key }}
MAILGUN_DOMAIN={{ mailgun_sender_domain }}
DJANGO_SERVER_EMAIL={{ server_email }}

# Security! Better to use DNS for this task, but you can use redirect
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_SESSION_COOKIE_HTTPONLY=True
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_CSRF_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_HTTPONLY=False

# django-allauth
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# Django Logging
DJANGO_LOG_LEVEL=INFO

# Sentry
SENTRY_DSN={{ django_sentry_dsn }}
