# General settings
DJANGO_SETTINGS_MODULE={{ django_settings }}
DJANGO_SECRET_KEY={{ django_secret_key }}
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.dgdnexus.chop.edu,.{{ inventory_hostname }},.{{ ansible_hostname }}
DJANGO_LOG_LEVEL=INFO
DJANGO_ADMIN_URL={{ django_admin_url }}
DATABASE_URL={{ django_database_url }}

# EMAIL
MAILGUN_DOMAIN={{ mailgun_sender_domain }}
MAILGUN_API_KEY={{ mailgun_api_key }}
DJANGO_DEFAULT_FROM_EMAIL="ExomeSlicer <noreply@{{ inventory_hostname }}>"

# Security! Better to use DNS for this task, but you can use redirect
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SESSION_COOKIE_SECURE=True
DJANGO_SESSION_COOKIE_HTTPONLY=True
DJANGO_CSRF_COOKIE_SECURE=True
DJANGO_CSRF_COOKIE_HTTPONLY=False

# Sentry
SENTRY_DSN={{ sentry_dsn }}
